<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3" style="color: #155d5d" id="log">
    Login on Visitly
  </h1>
  <div class="col-6 offset-3">
    <form
      action="/login"
      method="POST"
      class="needs-validation"
      id="custom"
      novalidate
    >
      <div class="mb-3">
        <lable for="username" class="form-label">Username</lable>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <lable for="password" class="form-label">Password</lable>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3" style="display: flex; align-items: center; justify-content: space-evenly;">
        <button class="btn btn-danger"><a href="/auth/google" style="text-decoration: none; color:white"> <i class="bi bi-google"></i> &nbsp; | &nbsp;  Login  with Google</a></button>
        <button class="btn btn-primary"><a href="/auth/facebook" style="text-decoration: none; color:white"> <i class="bi bi-facebook"></i> &nbsp; | &nbsp; Login with Facebook</a></button>
      </div>

      <div class="mb3">
        <a href="/forgot-password" style="text-decoration: none; color:rgb(0, 255, 255)">Forget password ?</a>
      </div>
      <br>
      <button class="btn btn-success" style="background-color:#155d5d !important">Login</button>
    </form>
  </div>
  <div style="margin-bottom: 40px"></div>
</div>
